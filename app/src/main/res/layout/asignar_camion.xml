<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/asignar_camion"
    android:background="@mipmap/fondo_propietario_camion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AsignarCamion">

    <TextView
        android:id="@+id/textView_PCAC_SesionActual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_PCAC_AsignarCamion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="@string/asignar_camion"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_PCAC_NombreSolicitud"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="Nombre Solicitud"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/textView_PCAC_AsignarCamion"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="@+id/textView_PCAC_AsignarCamion"
        app:layout_constraintTop_toBottomOf="@+id/textView_PCAC_AsignarCamion" />

    <Spinner
        android:id="@+id/spinner_PCAC_Camiones"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/textView_PCAC_NombreSolicitud"
        app:layout_constraintHorizontal_bias="0.412"
        app:layout_constraintStart_toStartOf="@+id/textView_PCAC_NombreSolicitud"
        app:layout_constraintTop_toBottomOf="@+id/textView_PCAC_NombreSolicitud" />

    <Button
        android:id="@+id/button_PCAC_Asignar"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="120dp"
        android:text="@string/asignar"
        app:layout_constraintEnd_toEndOf="@id/spinner_PCAC_Camiones"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/spinner_PCAC_Camiones"
        app:layout_constraintTop_toBottomOf="@id/spinner_PCAC_Camiones" />

    <Button
        android:id="@+id/button_PCAC_Cancelar"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:text="@string/cancelar"
        app:layout_constraintEnd_toEndOf="@id/button_PCAC_Asignar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/button_PCAC_Asignar"
        app:layout_constraintTop_toBottomOf="@id/button_PCAC_Asignar" />

</androidx.constraintlayout.widget.ConstraintLayout>