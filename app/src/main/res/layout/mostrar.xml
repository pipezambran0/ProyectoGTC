<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mostrar"
    android:background="@mipmap/fondo_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Mostrar">

    <TextView
        android:id="@+id/textView_mostrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/ver_perfiles"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/listView_mostrar"
        android:layout_width="349dp"
        android:layout_height="689dp"
        android:layout_marginTop="16dp"
        android:choiceMode="singleChoice"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@id/textView_mostrar"
        app:layout_constraintStart_toStartOf="@id/textView_mostrar"
        app:layout_constraintTop_toBottomOf="@id/textView_mostrar" />

</androidx.constraintlayout.widget.ConstraintLayout>